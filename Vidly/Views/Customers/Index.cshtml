@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (!Model.Any())
{
    <text>No Customers are registered yet.</text>
}
else
{
    <table class="table table-bordered table-hover">
        @foreach (var customers in Model)
        {
            <tr>
                <td>@Html.ActionLink(customers.Name, "Details", "Customers", new { Id = customers.Id }, null)</td>
            </tr>
        }
    </table>
}

